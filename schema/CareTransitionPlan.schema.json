{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CareTransitionPlan",
  "type": "object",
  "properties": {
    "transitionId": {
      "type": "string",
      "description": "Eindeutige Kennung des Übergangs"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "fromSetting": {
      "type": "string",
      "description": "Ausgangs-Setting (z. B. Klinik, Zuhause)"
    },
    "toSetting": {
      "type": "string",
      "description": "Ziel-Setting (z. B. Wohngemeinschaft, Pflegeheim)"
    },
    "transitionDate": {
      "type": "string",
      "format": "date",
      "description": "Datum des geplanten Übergangs"
    },
    "responsibleParties": {
      "type": "array",
      "description": "Beteiligte verantwortliche Personen oder Institutionen",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "description": "Rolle oder Funktion (z. B. Betreuer, Sozialdienst)"
          },
          "name": {
            "type": "string",
            "description": "Name der verantwortlichen Person oder Institution"
          },
          "contact": {
            "type": "string",
            "description": "Kontaktinformationen (z. B. Telefonnummer oder E-Mail)"
          }
        },
        "required": ["role", "name"]
      }
    },
    "handoverInformation": {
      "type": "string",
      "description": "Relevante Informationen zur Übergabe (medizinisch, organisatorisch, sozial)"
    },
    "followUpPlans": {
      "type": "array",
      "description": "Geplante Nachverfolgungsschritte nach dem Übergang",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Geplante Maßnahme (z. B. Nachsorgegespräch)"
          },
          "dueDate": {
            "type": "string",
            "format": "date",
            "description": "Fälligkeitsdatum der Maßnahme"
          },
          "responsible": {
            "type": "string",
            "description": "Zuständige Person oder Institution"
          }
        },
        "required": ["action", "dueDate"]
      }
    },
    "notes": {
      "type": "string",
      "description": "Zusätzliche Anmerkungen oder Kommentare"
    }
  },
  "required": ["transitionId", "clientId", "fromSetting", "toSetting", "transitionDate", "responsibleParties"]
}
