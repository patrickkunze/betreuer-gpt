{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DigitalUsageLog",
  "type": "object",
  "properties": {
    "logId": {
      "type": "string",
      "description": "Eindeutige Kennung des Protokolleintrags"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Datum des Kontakts im Format YYYY-MM-DD"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "platform": {
      "type": "string",
      "description": "Genutzte digitale Plattform (z.B. WhatsApp, E-Mail, Signal)"
    },
    "frequency": {
      "type": "string",
      "enum": ["einmalig", "gelegentlich", "regelmäßig", "täglich"],
      "description": "Häufigkeit der Nutzung"
    },
    "contentSummary": {
      "type": "string",
      "description": "Kurzbeschreibung der Inhalte der Kommunikation"
    },
    "dataProtectionNotice": {
      "type": "string",
      "description": "Hinweise zum Datenschutz oder zur Einwilligung"
    },
    "notes": {
      "type": "string",
      "description": "Freitext-Feld für ergänzende Anmerkungen",
      "nullable": true
    },
    "attachments": {
      "type": "array",
      "description": "Optional hochgeladene Dateien zur Dokumentation",
      "items": {
        "type": "object",
        "properties": {
          "fileName": {
            "type": "string",
            "description": "Name der Datei"
          },
          "fileUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL zur Datei"
          }
        },
        "required": ["fileName", "fileUrl"]
      }
    }
  },
  "required": ["logId", "date", "clientId", "platform", "frequency", "contentSummary", "dataProtectionNotice"]
}
