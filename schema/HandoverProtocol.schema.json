{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fallübergabe-Checkliste",
  "type": "object",
  "properties": {
    "checklistId": {
      "type": "string",
      "description": "Eindeutige Kennung der Fallübergabe-Checkliste"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Datum der Erstellung der Checkliste im Format YYYY-MM-DD"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "keyContacts": {
      "type": "array",
      "description": "Schlüsselkontakte für die Nachfolge",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "contactInfo": { "type": "string" }
        },
        "required": ["name", "role", "contactInfo"]
      }
    },
    "openTasks": {
      "type": "array",
      "description": "Offene Aufgaben, die zu übergeben sind",
      "items": {
        "type": "string"
      }
    },
    "accessCredentials": {
      "type": "array",
      "description": "Zugangsdaten zu wichtigen Systemen oder Plattformen",
      "items": {
        "type": "object",
        "properties": {
          "system": { "type": "string" },
          "username": { "type": "string" },
          "notes": { "type": "string" }
        },
        "required": ["system", "username"]
      }
    },
    "documents": {
      "type": "array",
      "description": "Wichtige Dokumente zur Übergabe",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "fileUrl": { "type": "string", "format": "uri" }
        },
        "required": ["title", "fileUrl"]
      }
    },
    "additionalNotes": {
      "type": "string",
      "description": "Freitextfeld für ergänzende Hinweise"
    }
  },
  "required": ["checklistId", "date", "clientId"]
}

