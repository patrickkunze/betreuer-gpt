{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Interdisziplinärer Fallbericht",
  "type": "object",
  "properties": {
    "reportId": {
      "type": "string",
      "description": "Eindeutige Kennung des Fallberichts"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Datum des Berichts im Format YYYY-MM-DD"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "topic": {
      "type": "string",
      "description": "Thema des interdisziplinären Falls"
    },
    "disciplinesInvolved": {
      "type": "array",
      "description": "Liste der beteiligten Disziplinen",
      "items": {
        "type": "string",
        "enum": ["Medizin", "Psychologie", "Sozialarbeit", "Recht", "Pflege", "Therapie", "Sonstige"]
      }
    },
    "findings": {
      "type": "string",
      "description": "Zusammenfassung der disziplinären Befunde"
    },
    "jointRecommendations": {
      "type": "string",
      "description": "Gemeinsam abgestimmte Handlungsempfehlungen"
    },
    "attachments": {
      "type": "array",
      "description": "Angehängte Dateien zum Bericht",
      "items": {
        "type": "object",
        "properties": {
          "fileName": {
            "type": "string",
            "description": "Name der Datei"
          },
          "fileUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL zur Datei"
          }
        },
        "required": ["fileName", "fileUrl"]
      }
    },
    "notes": {
      "type": "string",
      "description": "Zusätzliche Anmerkungen zum Fall"
    }
  },
  "required": ["reportId", "date", "clientId", "topic", "disciplinesInvolved", "findings", "jointRecommendations"]
}
