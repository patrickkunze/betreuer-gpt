"InterventionPlan": {
  "type": "object",
  "description": "Feingliedriges Schema für geplante Maßnahmen im Interventionsplan",
  "properties": {
    "ziel": {
      "type": "string",
      "description": "Konkretes, messbares Ziel der Intervention"
    },
    "methode": {
      "type": "string",
      "description": "Gewählte Methode oder Vorgehensweise zur Erreichung des Ziels"
    },
    "zeitrahmen": {
      "type": "object",
      "description": "Zeitliche Planung der Maßnahme",
      "properties": {
        "startDatum": {
          "type": "string",
          "format": "date",
          "description": "Geplanter Beginn der Intervention (YYYY-MM-DD)"
        },
        "endDatum": {
          "type": "string",
          "format": "date",
          "description": "Voraussichtliches Ende der Intervention (YYYY-MM-DD)"
        }
      },
      "required": ["startDatum", "endDatum"]
    },
    "beteiligteAkteure": {
      "type": "array",
      "description": "Liste der Personen oder Institutionen, die an der Maßnahme beteiligt sind",
      "items": {
        "type": "object",
        "properties": {
          "akteurId": {
            "type": "string",
            "description": "Eindeutige Kennung des Akteurs"
          },
          "name": {
            "type": "string",
            "description": "Name des beteiligten Akteurs"
          },
          "rolle": {
            "type": "string",
            "description": "Rolle oder Funktion des Akteurs innerhalb der Maßnahme"
          }
        },
        "required": ["akteurId", "name", "rolle"]
      }
    },
    "erfolgskriterien": {
      "type": "array",
      "description": "Kriterien zur Bewertung des Erfolgs der Intervention",
      "items": {
        "type": "object",
        "properties": {
          "kriterium": {
            "type": "string",
            "description": "Beschreibung des Erfolgskriteriums"
          },
          "messmethode": {
            "type": "string",
            "description": "Art und Weise der Erfolgsmessung"
          },
          "schwellenwert": {
            "type": "string",
            "description": "Definition eines quantitativen oder qualitativen Schwellenwerts"
          }
        },
        "required": ["kriterium", "messmethode"]
      }
    }
  },
  "required": ["ziel", "methode", "zeitrahmen", "beteiligteAkteure", "erfolgskriterien"]
}
