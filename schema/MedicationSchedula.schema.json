{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Medikamentenplan",
  "type": "object",
  "properties": {
    "medicationScheduleId": {
      "type": "string",
      "description": "Eindeutige Kennung des Medikamentenplans"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "medications": {
      "type": "array",
      "description": "Liste der verordneten Medikamente",
      "items": {
        "type": "object",
        "properties": {
          "substance": {
            "type": "string",
            "description": "Wirkstoff des Medikaments"
          },
          "dosage": {
            "type": "string",
            "description": "Dosierung des Medikaments (z.B. '5 mg', '1 Tablette')"
          },
          "intakeTimes": {
            "type": "array",
            "description": "Liste der Einnahmezeiten",
            "items": {
              "type": "string",
              "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$",
              "description": "Einnahmezeit im 24h-Format (HH:MM)"
            }
          },
          "prescriptionDate": {
            "type": "string",
            "format": "date",
            "description": "Verordnungsdatum im Format YYYY-MM-DD"
          },
          "practice": {
            "type": "string",
            "description": "Name oder Kennung der Arztpraxis"
          },
          "validUntil": {
            "type": "string",
            "format": "date",
            "description": "GÃ¼ltigkeitsdauer der Verordnung (Datum im Format YYYY-MM-DD)"
          }
        },
        "required": ["substance", "dosage", "intakeTimes", "prescriptionDate", "practice", "validUntil"]
      }
    }
  },
  "required": ["medicationScheduleId", "clientId", "medications"]
}
