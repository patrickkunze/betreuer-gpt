{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ServiceUtilizationRecord",
  "type": "object",
  "properties": {
    "recordId": {
      "type": "string",
      "description": "Eindeutige Kennung des Nutzungsdatensatzes"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "serviceType": {
      "type": "string",
      "description": "Art der in Anspruch genommenen Leistung (z. B. Therapie, Pflege, Assistenz)"
    },
    "provider": {
      "type": "string",
      "description": "Name oder Kennung des Leistungserbringers"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Datum der Leistungserbringung (Format: YYYY-MM-DD)"
    },
    "frequency": {
      "type": "string",
      "description": "Häufigkeit der Inanspruchnahme (z. B. einmalig, wöchentlich, monatlich)"
    },
    "costCenter": {
      "type": "string",
      "description": "Zugehörige Kostenstelle"
    }
  },
  "required": ["recordId", "clientId", "serviceType", "provider", "date", "frequency", "costCenter"]
}
