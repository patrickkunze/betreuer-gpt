{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskReminder",
  "description": "Schema für automatisierte Erinnerungen oder To-Dos (Fristen, Abgabetermine, Wiedervorlagen)",
  "type": "object",
  "properties": {
    "task": {
      "type": "string",
      "description": "Beschreibung der Aufgabe"
    },
    "dueDate": {
      "type": "string",
      "format": "date-time",
      "description": "Fälligkeitsdatum und -uhrzeit im ISO 8601-Format"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "Priorität der Aufgabe"
    },
    "responsiblePerson": {
      "type": "object",
      "description": "Verantwortliche Person für die Durchführung der Aufgabe",
      "properties": {
        "id": {
          "type": "string",
          "description": "Eindeutige Kennung der verantwortlichen Person"
        },
        "name": {
          "type": "string",
          "description": "Vollständiger Name der verantwortlichen Person"
        }
      },
      "required": ["id", "name"]
    }
  },
  "required": ["task", "dueDate", "priority", "responsiblePerson"],
  "additionalProperties": false
}
