{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/notes.schema.json",
  "title": "Betreuungs_Gespraechsnotiz_v2.0",
  "description": "Strukturierte Dokumentation von Gesprächen gem. Hamburger Mustergliederung (Stand: Mai 2025)",
  "type": "object",
  "required": [
    "meta",
    "zusammenfassung",
    "zentrale_punkte",
    "massnahmen",
    "evaluation_reflexion"
  ],

  "properties": {

    "meta": {
      "type": "object",
      "description": "Formale Metadaten zum Gespräch",
      "required": ["datum_zeit", "ort", "beteiligte"],
      "properties": {
        "datum_zeit": { "type": "string", "format": "date-time" },
        "ort":        { "type": "string" },

        "beteiligte": {
          "type": "object",
          "required": ["betreuer_in", "betreute_person"],
          "properties": {
            "betreuer_in":      { "type": "string" },
            "betreute_person":  { "type": "string" },
            "dritte": {
              "type": "array",
              "description": "Weitere anwesende Personen",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "zusammenfassung": {
      "type": "object",
      "description": "Kurze Gesprächszusammenfassung (2 – 3 Sätze)",
      "required": ["ziel_anlass", "wesentlicher_verlauf"],
      "properties": {
        "ziel_anlass":        { "type": "string" },
        "wesentlicher_verlauf":{ "type": "string" }
      },
      "additionalProperties": false
    },

    "zentrale_punkte": {
      "type": "object",
      "description": "Kerninhalte geordnet nach Themen­feldern",
      "properties": {

        "gesundheit": {
          "type": "object",
          "properties": {
            "zustand":         { "type": "string" },
            "arzt_medikation": { "type": "string" },
            "therapiebedarf":  { "type": "string" }
          },
          "additionalProperties": false
        },

        "vermoegen": {
          "type": "object",
          "properties": {
            "einnahmen_ausgaben": { "type": "string" },
            "konten_werte":       { "type": "string" }
          },
          "additionalProperties": false
        },

        "wohnsituation": {
          "type": "object",
          "properties": {
            "wohnform":        { "type": "string" },
            "barrieren":       { "type": "string" },
            "anpassungsbedarf":{ "type": "string" }
          },
          "additionalProperties": false
        },

        "soziale_kontakte": {
          "type": "object",
          "properties": {
            "angehoerige_freunde": { "type": "string" },
            "aktivitaeten":        { "type": "string" }
          },
          "additionalProperties": false
        },

        "wuensche_beduerfnisse": {
          "type": "object",
          "properties": {
            "kurzfristig": { "type": "string" },
            "mittelfristig":{ "type": "string" },
            "alltag_praef": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "massnahmen": {
      "type": "array",
      "description": "Konkrete Aufgaben und To-Dos",
      "items": {
        "type": "object",
        "required": ["aufgabe", "verantwortlich"],
        "properties": {
          "aufgabe":       { "type": "string" },
          "verantwortlich":{ "type": "string" },
          "frist":         { "type": "string", "format": "date" },
          "intervention":  { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "evaluation_reflexion": {
      "type": "object",
      "description": "Fachliche Einordnung & Ausblick",
      "properties": {
        "einschaetzung":        { "type": "string" },
        "erreichte_ziele_offen":{ "type": "string" },
        "anpassungsbedarf":     { "type": "string" }
      },
      "additionalProperties": false
    }
  },

  "additionalProperties": false
}