{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/report.schema.json",
  "title": "Hamburger_Mustergliederung_Bericht_v2.0",
  "description": "Anfangs-, Jahres- und Schlussbericht nach § 1863 BGB (Stand: Mai 2025)",
  "type": "object",
  "required": [
    "meta",
    "stammdaten",
    "adresse",
    "berichtszeitraum",
    "lebenslage",
    "kontaktgestaltung",
    "aufgabenbereiche",
    "bewertung_ausblick"
  ],

  "properties": {

    "meta": {
      "type": "object",
      "description": "Technische Metadaten – kein Bestandteil des Berichts",
      "required": ["version", "language", "created"],
      "properties": {
        "version":  { "type": "string", "pattern": "^v[0-9]+\\.[0-9]+$" },
        "language": { "enum": ["de"] },
        "created":  { "type": "string", "format": "date-time" }
      },
      "additionalProperties": false
    },

    "stammdaten": {
      "type": "object",
      "description": "§ 1863 Abs. 3 Nr. 1 BGB – Basisdaten der betreuten Person",
      "required": ["name", "geschaeftszeichen"],
      "properties": {
        "name":            { "type": "string" },
        "geburtsdatum":    { "type": "string", "format": "date" },
        "geschaeftszeichen":{ "type": "string" },
        "betreuer_in":     { "type": "string" }
      },
      "additionalProperties": false
    },

    "adresse": {
      "type": "string",
      "description": "Aktuelle Wohnanschrift (§ 1863 Abs. 3)"
    },

    "berichtszeitraum": {
      "type": "object",
      "description": "Von-/Bis-Angaben für den Bericht",
      "required": ["von", "bis"],
      "properties": {
        "von": { "type": "string", "format": "date" },
        "bis": { "type": "string", "format": "date" }
      },
      "additionalProperties": false
    },

    "lebenslage": {
      "type": "object",
      "description": "Punkt 5 – Schilderung der Lebenslage (§ 1821 BGB)",
      "properties": {
        "eckdaten":             { "type": "string" },
        "vorstellungen":        { "type": "string" },
        "wuensche_ressourcen":  { "type": "string" },
        "alltag_soziales":      { "type": "string" },
        "befindlichkeit":       { "type": "string" },
        "auslandsaufenthalte":  { "type": "string" }
      },
      "additionalProperties": false
    },

    "kontaktgestaltung": {
      "type": "object",
      "description": "Punkt 6 – Beteiligung & Kontakte",
      "properties": {
        "beteiligung_entscheidungen": { "type": "string" },
        "ermittlung_wuensche":        { "type": "string" },
        "entscheidungen_gegen_willen":{ "type": "string" },
        "kontakt_details":            { "type": "string" },
        "bericht_besprochen":         { "type": "boolean" },
        "nicht_besprochen_grund":     { "type": "string" },
        "kontakte_angehoerige":       { "type": "string" }
      },
      "additionalProperties": false
    },

    "aufgabenbereiche": {
      "type": "object",
      "description": "Punkt 7 – Aufgaben- und Vertretungsbereiche a – h",
      "required": ["a","b","c","d","e","f","g","h"],
      "properties": {
        "a": { "$ref": "#/$defs/gesundheitssorge" },
        "b": { "$ref": "#/$defs/freiheitsentzug" },
        "c": { "$ref": "#/$defs/aufenthaltsbestimmung" },
        "d": { "$ref": "#/$defs/unterstuetzung_versorgung" },
        "e": { "$ref": "#/$defs/regelungsbedarfe" },
        "f": { "$ref": "#/$defs/vermoegenssorge" },
        "g": { "$ref": "#/$defs/weitere_aufgaben" },
        "h": { "$ref": "#/$defs/taetigkeiten_ausserhalb" }
      },
      "additionalProperties": false
    },

    "bewertung_ausblick": {
      "type": "object",
      "description": "Punkt 8 – Bewertung & Planung (§ 1863 Abs. 3)",
      "properties": {
        "umfang_betreuung":         { "type": "string" },
        "veraenderungen":           { "type": "string" },
        "ziele_naechstes_jahr":     { "type": "string" },
        "ressourcen_umfeld":        { "type": "string" },
        "sichtweise_betreueter":    { "type": "string" }
      },
      "additionalProperties": false
    }
  },

  "$defs": {

    "gesundheitssorge": {
      "type": "object",
      "description": "a) Gesundheitssorge",
      "properties": {
        "diagnosen":               { "type": "string" },
        "vorstellungen":           { "type": "string" },
        "patientenverfuegung":     { "type": "string" },
        "massnahmen":              { "type": "string" },
        "medikamente":             { "type": "string" },
        "behandlungen_vorsorge":   { "type": "string" },
        "pflegemassnahmen":        { "type": "string" },
        "sicherstellung":          { "type": "string" },
        "einwilligungen":          { "type": "string" },
        "zwangsmaßnahmen":         { "type": "string" }
      },
      "additionalProperties": false
    },

    "freiheitsentzug": {
      "type": "object",
      "description": "b) Freiheitsentziehende Unterbringung/Maßnahmen",
      "properties": {
        "erforderlichkeit":    { "type": "string" },
        "gepruefte_alternativen":{ "type": "string" },
        "ruecksprachen":       { "type": "string" },
        "erfolgsbewertung":    { "type": "string" },
        "schlussfolgerungen":  { "type": "string" }
      },
      "additionalProperties": false
    },

    "aufenthaltsbestimmung": {
      "type": "object",
      "description": "c) Aufenthaltsbestimmung",
      "properties": {
        "wohnortwechsel": { "type": "string" }
      },
      "additionalProperties": false
    },

    "unterstuetzung_versorgung": {
      "type": "object",
      "description": "d) Ambulante/stationäre Unterstützung & Versorgung",
      "properties": {
        "assistenzleistungen": { "type": "string" },
        "akzeptanz_betreueter":{ "type": "string" },
        "bewertung_leistung":  { "type": "string" },
        "taetigkeiten_betreuer":{ "type": "string" }
      },
      "additionalProperties": false
    },

    "regelungsbedarfe": {
      "type": "object",
      "description": "e) Regelungsbedarfe (Behörden, Versicherungen usw.)",
      "properties": {
        "was_geregelt":      { "type": "string" },
        "wer_hat_was":       { "type": "string" },
        "art_unterstuetzung":{ "type": "string" },
        "regelungsweg":      { "type": "string" }
      },
      "additionalProperties": false
    },

    "vermoegenssorge": {
      "type": "object",
      "description": "f) Vermögenssorge",
      "properties": {
        "einnahmen_ausgaben":     { "type": "string" },
        "entwicklung_vermoegen":  { "type": "string" },
        "absprachen":             { "type": "string" },
        "verwahrgeldkonten":      { "type": "string" },
        "bestattungsvorsorge":    { "type": "string" },
        "schulden":               { "type": "string" },
        "besondere_gegenstaende": { "type": "string" },
        "einwilligungsvorbehalt": { "type": "string" }
      },
      "additionalProperties": false
    },

    "weitere_aufgaben": {
      "type": "string",
      "description": "g) Weitere Aufgabenbereiche"
    },

    "taetigkeiten_ausserhalb": {
      "type": "string",
      "description": "h) Tätigkeiten außerhalb des Aufgabenkreises"
    }
  },

  "additionalProperties": false
}