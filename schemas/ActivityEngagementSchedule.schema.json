{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Aktivitäts- und Beschäftigungsplan",
  "type": "object",
  "properties": {
    "scheduleId": {
      "type": "string",
      "description": "Eindeutige Kennung des Aktivitätsplans"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "startDate": {
      "type": "string",
      "format": "date",
      "description": "Startdatum des Plans im Format YYYY-MM-DD"
    },
    "endDate": {
      "type": "string",
      "format": "date",
      "description": "Enddatum des Plans im Format YYYY-MM-DD"
    },
    "activities": {
      "type": "array",
      "description": "Liste geplanter Aktivitäten",
      "items": {
        "type": "object",
        "properties": {
          "activityType": {
            "type": "string",
            "description": "Art der Beschäftigung (z. B. Spaziergang, Basteln, Lesen)"
          },
          "durationMinutes": {
            "type": "integer",
            "minimum": 1,
            "description": "Dauer der Aktivität in Minuten"
          },
          "frequency": {
            "type": "string",
            "enum": ["einmalig", "täglich", "wöchentlich", "monatlich"],
            "description": "Häufigkeit der Durchführung"
          },
          "dayOfWeek": {
            "type": "string",
            "enum": ["Montag", "Dienstag", "Mittwoch", "Donnerstag", "Freitag", "Samstag", "Sonntag"],
            "description": "Wochentag der Aktivität (falls zutreffend)"
          },
          "responsiblePerson": {
            "type": "string",
            "description": "Verantwortliche Person für die Durchführung"
          },
          "notes": {
            "type": "string",
            "description": "Optionale Anmerkungen zur Aktivität"
          }
        },
        "required": ["activityType", "durationMinutes", "frequency", "responsiblePerson"]
      }
    }
  },
  "required": ["scheduleId", "clientId", "startDate", "activities"]
}
