{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AppointmentSchedule",
  "description": "Strukturierte Darstellung aller anstehenden Termine inklusive Datum, Uhrzeit, Ort, Beteiligte und Erinnerungsparameter.",
  "type": "object",
  "properties": {
    "appointments": {
      "type": "array",
      "description": "Liste der geplanten Termine",
      "items": {
        "$ref": "#/definitions/Appointment"
      },
      "minItems": 1
    }
  },
  "required": ["appointments"],
  "definitions": {
    "Appointment": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Eindeutige Kennung des Termins"
        },
        "type": {
          "type": "string",
          "enum": ["court", "medical", "caseMeeting", "other"],
          "description": "Art des Termins"
        },
        "title": {
          "type": "string",
          "description": "Kurztitel des Termins"
        },
        "description": {
          "type": "string",
          "description": "Ausführliche Beschreibung (optional)"
        },
        "start": {
          "type": "string",
          "format": "date-time",
          "description": "Beginn des Termins im ISO 8601-Format"
        },
        "end": {
          "type": "string",
          "format": "date-time",
          "description": "Ende des Termins im ISO 8601-Format (optional)"
        },
        "location": {
          "type": "object",
          "description": "Ort des Termins",
          "properties": {
            "name": {
              "type": "string",
              "description": "Bezeichnung des Ortes"
            },
            "address": {
              "type": "string",
              "description": "Adresse (Straße, PLZ, Ort)"
            }
          },
          "required": ["name"]
        },
        "participants": {
          "type": "array",
          "description": "Beteiligte Personen",
          "items": {
            "$ref": "#/definitions/Participant"
          },
          "minItems": 1
        },
        "reminders": {
          "type": "array",
          "description": "Erinnerungsparameter",
          "items": {
            "$ref": "#/definitions/Reminder"
          }
        }
      },
      "required": ["id", "title", "start", "location", "participants"]
    },
    "Participant": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Vor- und Nachname"
        },
        "role": {
          "type": "string",
          "description": "Rolle im Termin (z. B. Betreuer, Arzt, Richter)"
        },
        "contact": {
          "type": "object",
          "description": "Kontaktinformationen (optional)",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            }
          }
        }
      },
      "required": ["name", "role"]
    },
    "Reminder": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "enum": ["email", "sms", "push"],
          "description": "Art der Benachrichtigung"
        },
        "offsetMinutes": {
          "type": "integer",
          "minimum": 0,
          "description": "Erinnerung erfolgt X Minuten vor Terminbeginn"
        }
      },
      "required": ["method", "offsetMinutes"]
    }
  }
}
