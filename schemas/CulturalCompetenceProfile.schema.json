{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CulturalCompetenceProfile",
  "type": "object",
  "properties": {
    "profileId": {
      "type": "string",
      "description": "Eindeutige Kennung des kulturellen Kompetenzprofils"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person, auf die sich das Profil bezieht"
    },
    "nativeLanguage": {
      "type": "string",
      "description": "Muttersprache der betreuten Person"
    },
    "interpreterNeeded": {
      "type": "boolean",
      "description": "Gibt an, ob ein Dolmetscher benötigt wird"
    },
    "preferredLanguages": {
      "type": "array",
      "description": "Bevorzugte Sprachen für die Kommunikation",
      "items": {
        "type": "string"
      }
    },
    "religion": {
      "type": "string",
      "description": "Religiöse Zugehörigkeit oder Orientierung der betreuten Person"
    },
    "valuesAndNorms": {
      "type": "string",
      "description": "Wichtige kulturelle Werte und soziale Normen, die beachtet werden sollten"
    },
    "communicationHints": {
      "type": "string",
      "description": "Kulturspezifische Hinweise zur Kommunikation"
    },
    "careHints": {
      "type": "string",
      "description": "Kulturspezifische Hinweise zur Betreuung"
    }
  },
  "required": ["profileId", "clientId", "nativeLanguage", "interpreterNeeded"]
}

