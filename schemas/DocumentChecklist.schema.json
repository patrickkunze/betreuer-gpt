{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dokumenten-Checkliste",
  "type": "object",
  "properties": {
    "checklistId": {
      "type": "string",
      "description": "Eindeutige Kennung der Checkliste"
    },
    "processName": {
      "type": "string",
      "description": "Name des zugehörigen Prozesses (z. B. Antrag auf Wohngeld)"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "documents": {
      "type": "array",
      "description": "Liste benötigter Dokumente",
      "items": {
        "type": "object",
        "properties": {
          "documentName": {
            "type": "string",
            "description": "Name des benötigten Dokuments"
          },
          "responsible": {
            "type": "string",
            "description": "Verantwortliche Person für das Dokument"
          },
          "status": {
            "type": "string",
            "description": "Status des Dokuments",
            "enum": ["offen", "inBearbeitung", "vorhanden", "nicht erforderlich"]
          },
          "dueDate": {
            "type": "string",
            "format": "date",
            "description": "Frist zur Beschaffung des Dokuments (Format: YYYY-MM-DD)"
          }
        },
        "required": ["documentName", "responsible", "status"]
      }
    }
  },
  "required": ["checklistId", "processName", "clientId", "documents"]
}

