{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocumentVersioning",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Versionsnummer des Dokuments, z.B. 'v1.0' oder '2025-05-10-01'"
    },
    "author": {
      "type": "string",
      "description": "Name oder Kennung der Person, die die Änderung vorgenommen hat"
    },
    "modificationDate": {
      "type": "string",
      "format": "date",
      "description": "Datum der Änderung im Format YYYY-MM-DD"
    },
    "modificationDescription": {
      "type": "string",
      "description": "Beschreibung der durchgeführten Änderung"
    }
  },
  "required": ["version", "author", "modificationDate", "modificationDescription"]
}
