{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notfallkontaktverzeichnis",
  "type": "object",
  "properties": {
    "contacts": {
      "type": "array",
      "description": "Liste der Notfallkontakte",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Vollständiger Name des Notfallkontakts"
          },
          "relationship": {
            "type": "string",
            "description": "Beziehung zur betreuten Person (z. B. Tochter, Nachbar, Arzt)"
          },
          "phoneNumbers": {
            "type": "array",
            "description": "Liste erreichbarer Telefonnummern",
            "items": {
              "type": "string",
              "pattern": "^\\+?[0-9 \\-()]{7,}$"
            },
            "minItems": 1
          },
          "availability": {
            "type": "string",
            "description": "Verfügbarkeit des Kontakts (z. B. werktags 8–18 Uhr)"
          },
          "instructions": {
            "type": "string",
            "description": "Spezifische Anweisungen für den Notfallkontakt",
            "maxLength": 1000
          }
        },
        "required": ["name", "relationship", "phoneNumbers"]
      }
    }
  },
  "required": ["contacts"]
}
