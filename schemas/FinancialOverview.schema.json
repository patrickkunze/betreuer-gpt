{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FinancialOverview",
  "type": "object",
  "properties": {
    "overviewId": {
      "type": "string",
      "description": "Eindeutige Kennung der Kosten- und Budgetübersicht"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "period": {
      "type": "string",
      "pattern": "^(\\d{4}-(0[1-9]|1[0-2])|\\d{4})$",
      "description": "Berichtszeitraum als Jahr (YYYY) oder Monat (YYYY-MM)"
    },
    "entries": {
      "type": "array",
      "description": "Liste aller Einnahmen und Ausgaben",
      "items": {
        "type": "object",
        "properties": {
          "entryId": {
            "type": "string",
            "description": "Eindeutige Kennung des Eintrags"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Datum des Eintrags"
          },
          "category": {
            "type": "string",
            "description": "Kategorie der Einnahme oder Ausgabe"
          },
          "amount": {
            "type": "number",
            "description": "Betrag in Euro, negative Werte für Ausgaben"
          },
          "recipient": {
            "type": "string",
            "description": "Empfänger oder Herkunft der Zahlung"
          },
          "type": {
            "type": "string",
            "enum": ["Einnahme", "Ausgabe"],
            "description": "Typ des Eintrags"
          },
          "notes": {
            "type": "string",
            "description": "Freitext für ergänzende Informationen",
            "maxLength": 1000
          }
        },
        "required": ["entryId", "date", "category", "amount", "recipient", "type"]
      }
    }
  },
  "required": ["overviewId", "clientId", "period", "entries"]
}
