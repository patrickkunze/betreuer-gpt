{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PsychoSoziale Risikoanalyse",
  "type": "object",
  "properties": {
    "assessmentId": {
      "type": "string",
      "description": "Eindeutige Kennung der Risikoanalyse"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Datum der Risikoanalyse im Format YYYY-MM-DD"
    },
    "clientId": {
      "type": "string",
      "description": "Kennung der betreuten Person"
    },
    "dimensions": {
      "type": "array",
      "description": "Liste der untersuchten Dimensionen",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Bezeichnung der psychosozialen Dimension"
          },
          "assessment": {
            "type": "string",
            "enum": ["niedrig", "mittel", "hoch"],
            "description": "Einschätzung der Belastung"
          },
          "actionRequired": {
            "type": "boolean",
            "description": "Gibt an, ob Handlungsbedarf besteht"
          },
          "notes": {
            "type": "string",
            "description": "Ergänzende Hinweise oder Beobachtungen",
            "maxLength": 1000
          }
        },
        "required": ["name", "assessment", "actionRequired"]
      }
    },
    "overallRecommendation": {
      "type": "string",
      "description": "Gesamtbeurteilung oder Empfehlungen",
      "maxLength": 2000
    }
  },
  "required": ["assessmentId", "date", "clientId", "dimensions"]
}
