{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Besuchs- und Kontaktbericht",
  "type": "object",
  "properties": {
    "visitId": {
      "type": "string",
      "description": "Eindeutige Kennung des Besuchs- oder Kontaktberichts"
    },
    "dateTime": {
      "type": "string",
      "format": "date-time",
      "description": "Datum und Uhrzeit des Besuchs oder Kontakts im Format YYYY-MM-DDThh:mm:ssZ"
    },
    "location": {
      "type": "string",
      "description": "Ort des Besuchs oder Gesprächs (z. B. Zuhause, telefonisch, Einrichtung)"
    },
    "participants": {
      "type": "array",
      "description": "Liste der beteiligten Personen",
      "items": {
        "type": "string"
      }
    },
    "topicsDiscussed": {
      "type": "string",
      "description": "Besprochene Themen während des Kontakts"
    },
    "outcomes": {
      "type": "string",
      "description": "Ergebnisse des Gesprächs oder Besuchs"
    },
    "followUpActions": {
      "type": "string",
      "description": "Vereinbarte Folgeschritte nach dem Besuch oder Gespräch"
    }
  },
  "required": ["visitId", "dateTime", "location", "participants", "topicsDiscussed", "outcomes", "followUpActions"]
}
